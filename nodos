package nodo;

import java.util.Scanner;


public class pilanodo {
         Scanner lector = new Scanner(System.in);
    
    Nodo primero = new Nodo();
    Nodo ultimo = new Nodo();
    
    public pilanodo(){
        primero = null;
        ultimo = null;
    }
    public void insertarnodo(){
         
         Nodo nuevo = new Nodo();
         System.out.println("ingrese el dato del  nodo: ");
         nuevo.dato = lector.nextInt();
         if(primero == null){
             primero = nuevo;
             primero.siguiente = null;
             ultimo = nuevo;
         }else{
             ultimo.siguiente = nuevo;
             nuevo.siguiente = null;
             ultimo = nuevo;
             
         }
         System.out.println("ingresado correctamente");     
     }
    
    public void mostrarNodo(){
        Nodo actual= new Nodo();
        actual = primero;
        if(primero != null){
                System.out.println("los datos son: ");
         while(actual != null){            
             System.out.print("----->"+actual.dato+"\n");            
             actual = actual.siguiente;
         } 
       }else{
            System.out.println("la lista se encuentra vacia");
        }     
    }
    
    public void eliminarnodo(){
            
        Nodo actual = new Nodo();
        actual=primero;
        Nodo anterior = new Nodo();
        anterior = null;
        boolean encontrado = false;
        System.out.println("ingrese el dato del nodo a eliminar: ");
        int buscando = lector.nextInt();
        if(primero != null ){
          while(actual != null && encontrado != true){
            if(actual.dato == buscando){
              if(actual == primero){
               primero = primero.siguiente;
              }else{
               anterior.siguiente = actual.siguiente;
              }
              System.out.println("el nodo eliminado es: " + actual.dato );
              encontrado=true;
              }
              anterior = actual;
              actual = actual.siguiente;
          }  
          if(!encontrado){
              System.out.println("nodo no  encontrado");
          }
        }else{
            System.out.println("la pila esta vacia");
        }
    }
}
package nodo;

import java.util.Scanner;

public class Nodo {
 
    int dato;
    Nodo siguiente;
       
    public static void main(String[] args) {
     Scanner lector = new Scanner(System.in);
        int opcion;
        System.out.print(" __hola bienvenido__\n  ");
        pilanodo n = new pilanodo();
        
        do {  
            
            System.out.println("\n1.- Agregar nodo");
            System.out.println("2.- Mostrar nodo");
            System.out.println("3.- Eliminar nodo");
            System.out.println("4.- Salir\n");

            System.out.print("Â¿cual es su opcion? ");
            
            opcion = lector.nextInt();
            switch(opcion)
            {
              case 1:
                  n.insertarnodo();
                    break;
              case 2:
                  n.mostrarNodo();
                  break;
              case 3:
                  n.eliminarnodo();
                  break;
              default: System.out.println("--->bye<---");
                }
        }
        while(opcion !=4);
            
    }
    
}
